---
const { title, metric, description, accent } = Astro.props;
---

<div class={`energy-card ${accent ? `energy-card--${accent}` : ""}`}>
  <div class="energy-card__header">
    <span class="energy-card__label">{title}</span>
    <span class="energy-card__metric">{metric}</span>
  </div>
  <p>{description}</p>
  <div class="energy-card__pulse" aria-hidden="true"></div>
</div>

<style>
  .energy-card {
    position: relative;
    padding: 1.75rem;
    border-radius: 1.25rem;
    border: 1px solid rgba(55, 255, 159, 0.4);
    background: rgba(8, 18, 15, 0.65);
    backdrop-filter: blur(14px);
    overflow: hidden;
    transition: transform 0.45s ease, border 0.45s ease;
    isolation: isolate;
    box-shadow: inset 0 0 24px rgba(55, 255, 159, 0.05),
      0 0 30px rgba(55, 255, 159, 0.18);
  }

  .energy-card::before {
    content: "";
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at top right, rgba(55, 255, 159, 0.35), transparent 60%);
    opacity: 0.7;
    mix-blend-mode: screen;
    transition: opacity 0.4s ease;
  }

  .energy-card:hover {
    transform: translateY(-6px);
    border-color: rgba(55, 255, 159, 0.85);
  }

  .energy-card:hover::before {
    opacity: 1;
  }

  .energy-card__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.25rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    font-size: 0.75rem;
    color: rgba(240, 255, 245, 0.65);
  }

  .energy-card__metric {
    font-size: 1.6rem;
    font-weight: 700;
    color: var(--text-primary);
  }

  .energy-card p {
    color: var(--text-secondary);
    line-height: 1.65;
    font-size: 0.95rem;
    max-width: 28ch;
  }

  .energy-card__pulse {
    position: absolute;
    inset: -20%;
    background: radial-gradient(circle at center, rgba(55, 255, 159, 0.25), transparent 65%);
    animation: rotatePulse 12s linear infinite;
    z-index: -1;
  }

  .energy-card:hover .energy-card__pulse {
    animation-duration: 6s;
  }

  @keyframes rotatePulse {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  .energy-card--amber {
    border-color: rgba(249, 205, 71, 0.5);
    box-shadow: 0 0 30px rgba(249, 205, 71, 0.15);
  }

  .energy-card--amber::before {
    background: radial-gradient(circle at top right, rgba(249, 205, 71, 0.35), transparent 60%);
  }
</style>
