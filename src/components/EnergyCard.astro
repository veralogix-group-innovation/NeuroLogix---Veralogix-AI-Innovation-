---
const { title, metric, description, accent } = Astro.props;
---

<div class={`energy-card ${accent ? `energy-card--${accent}` : ""}`}>
  <div class="energy-card__header">
    <span class="energy-card__label">{title}</span>
    <span class="energy-card__metric">{metric}</span>
  </div>
  <p>{description}</p>
  <div class="energy-card__pulse" aria-hidden="true"></div>
</div>

<style>
  .energy-card {
    position: relative;
    padding: 1.75rem;
    border-radius: 1.25rem;
    border: 1px solid transparent;
    background:
      linear-gradient(175deg, rgba(51, 51, 51, 0.9), rgba(26, 26, 26, 0.88)) padding-box,
      linear-gradient(140deg, rgba(255, 255, 255, 0.2), rgba(57, 255, 20, 0.5)) border-box;
    backdrop-filter: blur(14px);
    overflow: hidden;
    transition: transform 0.45s ease, border 0.45s ease, box-shadow 0.45s ease;
    isolation: isolate;
    box-shadow:
      inset 0 0 0 1px rgba(255, 255, 255, 0.04),
      0 15px 45px rgba(0, 0, 0, 0.45);
  }

  .energy-card::before {
    content: "";
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at top right, rgba(57, 255, 20, 0.35), transparent 60%);
    opacity: 0.7;
    mix-blend-mode: screen;
    transition: opacity 0.4s ease;
  }

  .energy-card:hover {
    transform: translateY(-6px);
    background:
      linear-gradient(175deg, rgba(59, 59, 59, 0.95), rgba(26, 26, 26, 0.9)) padding-box,
      linear-gradient(140deg, rgba(255, 255, 255, 0.28), rgba(57, 255, 20, 0.65)) border-box;
    box-shadow:
      inset 0 0 0 1px rgba(255, 255, 255, 0.06),
      0 22px 55px rgba(0, 0, 0, 0.52);
  }

  .energy-card:hover::before {
    opacity: 1;
  }

  .energy-card__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.25rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    font-size: 0.75rem;
    color: rgba(240, 255, 245, 0.65);
  }

  .energy-card__metric {
    font-size: 1.6rem;
    font-weight: 700;
    color: var(--text-primary);
    text-shadow: 0 0 12px rgba(57, 255, 20, 0.25);
  }

  .energy-card p {
    color: var(--text-secondary);
    line-height: 1.65;
    font-size: 0.95rem;
    max-width: 28ch;
  }

  .energy-card__pulse {
    position: absolute;
    inset: -20%;
    background: radial-gradient(circle at center, rgba(57, 255, 20, 0.22), transparent 65%);
    animation: rotatePulse 12s linear infinite;
    z-index: -1;
  }

  .energy-card:hover .energy-card__pulse {
    animation-duration: 6s;
  }

  @keyframes rotatePulse {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  .energy-card--amber {
    background:
      linear-gradient(175deg, rgba(51, 51, 51, 0.92), rgba(26, 26, 26, 0.9)) padding-box,
      linear-gradient(140deg, rgba(255, 223, 128, 0.32), rgba(249, 205, 71, 0.58)) border-box;
  }

  .energy-card--amber::before {
    background: radial-gradient(circle at top right, rgba(249, 205, 71, 0.4), transparent 60%);
  }
</style>
